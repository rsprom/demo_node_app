body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF
input[type="submit"]
	border-radius: 5px
	border: none;
	margin: 0 10px
	height: 20px
	text-transform: uppercase
	@media screen and (max-width: 480px)
		margin-top 10px
		width: 100%
input[type="text"]
	border-radius: 5px
	padding: 0 10px
	height: 20px
	border-color: #DEDEDE
	border-width: 1px
	border-style: solid
	@media screen and (max-width: 480px)
		margin-top 10px
		width: 100%
hr
	border-color: #DEDEDE
.username
	text-transform: uppercase