extends layout

block content
    if question == null
        h1= "You've answered all the questions!"
    else
        h1= "Hello!" + 
        h1= "Please answer the following question:"
        form(action="/users/saveanswer?userid=#{userid}", method="post")
            p=question.question
        
            each choice in question.QuestionChoices
                input(type="radio", id="#{choice.id}", name="questionChoice", value="#{choice.id}", required)
                label(for="#{choice.id}")=choice.questionChoice

            input(type="submit")